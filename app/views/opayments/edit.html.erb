<div class="card">
 <div class="card-header bg-primary text-white">
   <h4 class="card-title mb-0">Edit Payment</h4>
 </div>
 
 <div class="card-body">
   <%= form_with(model: [@main, @opayment], local: true, class: "row g-3") do |f| %>
     <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-text">Amount</span>
          <%= f.number_field :amount, step: :any, class: "form-control", placeholder: "Enter the Amount In SAR" %>
        </div>
      </div>
      <div class="col-12">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", placeholder: "Payment Description" %>
      </div>
      <div class="col-12">
        <%= f.label :payment_method, class: "form-label" %>
        <%= f.select :payment_method, @payment_methods, class: "custom-select", placeholder: "Payment Method" %>
      </div>

     <div class="col-12">
       <div class="d-flex gap-2">
         <%= f.submit 'Update Overtime', class: "btn btn-primary" %>
         <%= link_to 'Back to Employee', @main, class: "btn btn-secondary" %>
       </div>
     </div>
   <% end %>
 </div>
</div>