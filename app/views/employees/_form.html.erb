<%= form_with(model: employee, class: "mb-4") do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h4>
      <ul class="mb-0">
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter employee name" %>
  </div>

  <div class="mb-3">
    <%= form.label :salary, class: "form-label" %>
    <%= form.number_field :salary, class: "form-control", placeholder: "Enter salary amount" %>
  </div>

  <div class="mb-3">
    <%= form.label :allowance, class: "form-label" %>
    <%= form.number_field :allowance, class: "form-control", placeholder: "Enter allowance amount" %>
  </div>

  <div class="mb-3">
    <%= form.label :comment, class: "form-label" %>
    <%= form.text_area :comment, class: "form-control", rows: 3, placeholder: "Enter any comments" %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Back", employees_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>